<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01//EN"
   "http://www.w3.org/TR/html4/strict.dtd">
<HTML>
   <HEAD>
      <TITLE>Title page</TITLE>

   </HEAD>
   <BODY>

    <%= render "shared/logger" %> 

    <h1> Guess evening standard </h1>


    <div>
    <% if @title.errors.any?  %>
      <%= @title.errors.messages[:name] %>
    <% end %>   
    </div>

    <div>
      
      <% if user_signed_in?  %>
        <% p = current_user.getTodayUserPost %>
        <% if !p.empty? %>
          <h3> Your today's guess </h3>
          <%= p.first.name %>
        <% else %>
          <%= form_for @title do |f| %>
            <%= f.text_field :name %>
            <%= f.submit "Post" %>
          <% end %>
        <% end %>
      <% else %>
         <%= form_for @title do |f| %>
            <%= f.text_field :name %>
            <%= f.submit "Post" %>
          <% end %>
      <% end %>
 
    </div> 

      
   </BODY>
</HTML>
